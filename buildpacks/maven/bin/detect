#!/usr/bin/env bash
set -ex pipefail

echo "- Checking for Pom:"
if [[ ! -f pom.xml ]]; then
  echo "- Checking for BOOT-INF folder:"
  if [ -d "BOOT-INF" ]; then
     echo "- Found."
  else
     exit 100
  fi
else
  echo "- Checking for Snowdrop in Pom"
  grep dev.snowdrop pom.xml 2>&1 >/dev/null
  RC=$?
  if [[ $? != 0 ]]; then
    exit 100
  else
    echo "- Found."
  fi
fi

